<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="10dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/edt_bott_userid"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_margin="10dp"
        android:background="@drawable/custom_input"
        android:hint="User Id"
        android:paddingLeft="20dp"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="20dp">
    </EditText>
    <EditText
        android:id="@+id/edt_bott_img"
        android:paddingLeft="20dp"
        android:hint="Url Image"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_margin="10dp"
        android:background="@drawable/custom_input"
        app:layout_constraintTop_toBottomOf="@id/edt_bott_userid">
    </EditText>
    <EditText
        android:paddingLeft="20dp"
        android:hint="Title"
        android:background="@drawable/custom_input"
        android:id="@+id/edt_bott_title"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_margin="10dp"
        app:layout_constraintTop_toBottomOf="@+id/edt_bott_img">
    </EditText>
    <EditText
        android:id="@+id/edt_bott_body"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:paddingLeft="20dp"
        android:hint="Body"
        android:background="@drawable/custom_input"
        android:layout_margin="10dp"
        app:layout_constraintTop_toBottomOf="@+id/edt_bott_title">
    </EditText>

    <Button
        android:id="@+id/btn_bott_update"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="50dp"
        android:textColor="@color/white"
        android:backgroundTint="#2196F3"
        android:text="UPDATE"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edt_bott_body">
    </Button>

    <Button
        android:id="@+id/btn_bottt_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#D5542C"
        android:gravity="right"
        android:textColor="@color/black"
        android:layout_margin="50dp"
        android:text="Close"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edt_bott_body">
    </Button>

</androidx.constraintlayout.widget.ConstraintLayout>