<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageButton
        android:id="@+id/imageButton2"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_margin="20dp"
        android:background="@drawable/ic_back2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
    </ImageButton>

    <TextView
        android:id="@+id/textView16"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="112dp"
        android:layout_marginTop="16dp"
        android:drawableLeft="@drawable/ic_vectoredit"
        android:text="  AC DEV"
        android:textColor="#0A2A6A"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/imageButton3"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/imageButton2"
        app:layout_constraintTop_toTopOf="parent">
    </TextView>

    <TextView
        android:id="@+id/textView17"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="(Đã kết nối)"
        android:textColor="#0A2A6A"
        app:layout_constraintEnd_toStartOf="@+id/imageButton3"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toEndOf="@+id/imageButton2"
        app:layout_constraintTop_toBottomOf="@+id/textView16">
    </TextView>

    <ImageButton
        android:id="@+id/imageButton3"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_margin="20dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/img_heart_red"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">
    </ImageButton>

    <TextView
        android:id="@+id/tvcelsiusmini"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="212dp"
        android:layout_marginTop="16dp"
        android:text="22.4 ℃"
        android:textColor="#0A2A6A"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView17">
    </TextView>

    <TextView
        android:id="@+id/textView19"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="36dp"
        android:text="85.2 %"
        android:textColor="#0A2A6A"
        android:textSize="15dp"
        app:layout_constraintStart_toEndOf="@+id/tvcelsiusmini"
        app:layout_constraintTop_toBottomOf="@+id/imageButton3">
    </TextView>

    <com.tenclouds.gaugeseekbar.GaugeSeekBar
        android:id="@+id/gaugeSeekBar"
        android:layout_width="180dp"
        app:progress="0.75"
        android:layout_height="180dp"
        android:layout_marginTop="12dp"
        app:layout_constraintEnd_toStartOf="@+id/btnadd"
        app:layout_constraintHorizontal_bias="0.492"
        app:layout_constraintStart_toEndOf="@+id/btnminus"
        app:layout_constraintTop_toBottomOf="@+id/tvcelsiusmini"
        app:progressWidth="20dp"
        app:progressGradient="@array/arrcolorex"
        app:thumbColor="#4CAF50"
        app:thumbRadius="10dp"
        app:trackWidth="20dp">
    </com.tenclouds.gaugeseekbar.GaugeSeekBar>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/txtcelsius"
        android:elevation="10dp"
        android:layout_width="100dp"
        app:backgroundTint="@color/white"
        android:layout_height="100dp"
        android:textColor="@color/orange"
        android:textStyle="bold"
        android:textSize="20dp"
        android:background="@drawable/round_button"
        android:text="24℃"
        app:layout_constraintBottom_toBottomOf="@+id/gaugeSeekBar"
        app:layout_constraintEnd_toEndOf="@+id/gaugeSeekBar"
        app:layout_constraintStart_toStartOf="@+id/gaugeSeekBar"
        app:layout_constraintTop_toTopOf="@+id/gaugeSeekBar">
    </com.google.android.material.button.MaterialButton>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnadd"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="144dp"
        android:layout_marginEnd="30dp"
        android:background="@drawable/round_button"
        app:backgroundTint="#F6F4F4"
        app:icon="@drawable/ic_add"
        app:iconTint="#AAA5A5"
        app:iconGravity="textStart"
        app:iconPadding="0dp"
        app:iconSize="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageButton3">
    </com.google.android.material.button.MaterialButton>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnminus"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="144dp"
        android:background="@drawable/round_button"
        app:backgroundTint="#F6F4F4"
        android:elevation="10dp"
        app:iconTint="#AAA5A5"
        app:icon="@drawable/ic_minus"
        app:iconGravity="textStart"
        app:iconPadding="0dp"
        app:iconSize="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageButton2">
    </com.google.android.material.button.MaterialButton>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/button3"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="68dp"
        android:layout_marginTop="16dp"
        android:elevation="10dp"
        app:iconTint="#AAA5A5"
        android:background="@drawable/round_button"
        app:backgroundTint="#F6F4F4"
        app:icon="@drawable/ic_fan"
        app:iconGravity="textStart"
        app:iconPadding="0dp"
        app:iconSize="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/gaugeSeekBar">
    </com.google.android.material.button.MaterialButton>

    <TextView
        android:id="@+id/textView20"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="68dp"
        android:layout_marginTop="16dp"
        android:text="MỨC ĐỘ QUẠT"
        android:textColor="#0A2A6A"
        android:textSize="12dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button3">
    </TextView>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/button4"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:elevation="10dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/round_button"
        app:backgroundTint="#F6F4F4"
        app:iconTint="#AAA5A5"
        app:icon="@drawable/ic_snow"
        app:iconGravity="textStart"
        app:iconPadding="0dp"
        app:iconSize="30dp"
        app:layout_constraintEnd_toStartOf="@+id/button5"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toEndOf="@+id/button3"
        app:layout_constraintTop_toBottomOf="@+id/gaugeSeekBar">
    </com.google.android.material.button.MaterialButton>

    <TextView
        android:id="@+id/textView21"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="CHẾ ĐỘ"
        android:textAlignment="center"
        android:textColor="#0A2A6A"
        android:textSize="12dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/textView22"
        app:layout_constraintStart_toEndOf="@+id/textView20"
        app:layout_constraintTop_toBottomOf="@+id/button4"></TextView>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/button5"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="68dp"
        android:elevation="10dp"
        android:background="@drawable/round_button"
        app:backgroundTint="#F6F4F4"
        app:icon="@drawable/ic_fanswip"
        app:iconTint="#AAA5A5"
        app:iconGravity="textStart"
        app:iconPadding="0dp"
        app:iconSize="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/gaugeSeekBar">
    </com.google.android.material.button.MaterialButton>

    <TextView
        android:id="@+id/textView22"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:textAlignment="center"
        android:layout_marginEnd="68dp"
        android:text="XOAY"
        android:textColor="#0A2A6A"
        android:textSize="12dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button5"></TextView>

    <TextView
        android:id="@+id/tvlastupdate"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Cập nhật lần cuối: "
        android:textAlignment="textEnd"
        android:textColor="#0A2A6A"
        app:layout_constraintEnd_toStartOf="@id/tvlastupdate2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView21">
    </TextView>

    <TextView
        android:id="@+id/tvlastupdate2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="18/08/2022 11:25:22 SA"
        android:textColor="#0A2A6A"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/tvlastupdate"
        app:layout_constraintTop_toBottomOf="@+id/textView21">
    </TextView>

</androidx.constraintlayout.widget.ConstraintLayout>